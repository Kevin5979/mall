/* 优惠券 */
.coupons-left {
  font-size: 24rpx;
  color: #999;
}

.coupons-right {
  font-size: 24rpx;
  color: #999;
}

.coupons-center {
  width: 540rpx;
  display: flex;
  justify-content: start;
  align-items: center;
}

.coupons-title {
  font-size: 24rpx;
  padding: 0 10rpx;
  margin-right: 15rpx;
  color: #ff5777;
  background: #ffeef3;
  box-sizing: border-box;
}

.coupons-center .coupons-items {
  display: flex;
  justify-content: start;
  align-items: center;
  flex-wrap: wrap;
  width: 380rpx;
}

.coupons-item {
  font-size: 24rpx;
  padding: 0 6rpx;
  color: #ff5777;
  box-sizing: border-box;
  border: 1rpx solid #ff5777;
  margin: 4rpx 8rpx;
}

.show-coupons{
  width: 100%;
}

.show-coupons .title{
  color: #999;
  text-align: center;
  padding: 20rpx 0;
}

.show-coupons .center{
  padding: 0 30rpx;
}
.show-coupons .item{
  width: 100%;
  height: 170rpx;
  margin: 14rpx 0;
  box-sizing: border-box;
  position: relative;
}


.show-coupons .item .image{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 8;
}

.show-coupons .item .detail{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9;
  display: flex;
}

.item .detail .left{
  width: 73%;
  padding: 20rpx 26rpx;
  box-sizing: border-box;
}

.detail .left .top{
  display: flex;
  justify-content: start;
  align-items: baseline;
}


.top .ctop{
  font-size: 64rpx;
  position: relative;
  margin-left: 10rpx;
  color: #333;
}
.top .ctop::before{
  content: "￥";
  font-size: 26rpx;
  position: absolute;
  left: -16rpx;
  top: 6rpx;
}

.top .ctop2{
  font-size: 26rpx;
  color: #999;
  margin-left: 10rpx;
}


.item .detail .right{
  color: #ff5777;
  line-height: 180rpx;
  text-align: center;
  font-size: 32rpx;
  flex: 1;
}

.detail .left .bottom{
  font-size: 26rpx;
  color: #999;
}

.show-coupons .complete{
  margin-top: 80rpx;
  width: 100%;
  font-size: 36rpx;
  text-align: center;
  padding: 24rpx 0;
  color: #fff;
  background-color: #ff5777;
}



