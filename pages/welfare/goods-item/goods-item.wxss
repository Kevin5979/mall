.item {
  width: 100%;
}

.item .image {
  width: 100%;
  height: 520rpx;
}

.top {
  position: relative;
}

.sale {
  padding: 6rpx 20rpx;
  box-sizing: border-box;
  position: absolute;
  left: 0;
  bottom: 30rpx;
  color: #fff;
  font-size: 30rpx;
  background: linear-gradient(to right, rgba(0, 0, 0, .8), rgba(0, 0, 0, .005))
}

.title {
  font-size: 26rpx;
  padding: 4rpx 10rpx;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.p{
  display: flex;
  justify-content: start;
  align-items: center;
  padding: 4rpx 10rpx;
  box-sizing: border-box;
}

.p .nprice{
  font-size: 24rpx;
  padding: 2rpx 6rpx;
  box-sizing: border-box;
  color: rgb(255, 188, 73);
  border: 1rpx solid rgb(255, 188, 73);
}

.price{
  margin-left: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.bottom{
  padding: 6rpx 10rpx 18rpx 10rpx;
  box-sizing: border-box;
}

.bug{
  text-align: center;
  font-size: 30rpx;
  padding: 6rpx 0;
  box-sizing: border-box;
  color: rgb(255, 255, 255);
  background-color: rgb(255, 87, 119);
}


