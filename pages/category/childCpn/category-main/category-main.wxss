.category-main {
  width: 100%;
  height: 100vh;
  overflow: scroll;
}

.category-main::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.menu{
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: start;
  align-items: center;
  flex-wrap: wrap;
  border-bottom: 1rpx solid #eee;
}

.menu .item{
  width: 33%;
  text-align: center;
  margin: 30rpx 0;
}

.menu .image{
  width: 75%;
}

.menu .title{
  font-size: 32rpx;
  color: #666;
}



