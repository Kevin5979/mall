.top{
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #bbb;
}

.inp{
  flex: 1;
  position: relative;
}

.input{
  height: 70rpx;
  background-color: #eee;
  margin-right: 30rpx;
  border-radius: 10rpx;
  padding-left: 60rpx;
  box-sizing: border-box;
}

.icon-fangdajing{
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  color: #999;
  font-size: 30rpx;
}

.icon-gouwuchekong{
  width: 12%;
  font-size: 60rpx;
  color: #999;
}

.menu{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  box-sizing: border-box;
}

.menu>view{
  width: 25%;
  font-size: 32rpx;
  text-align: center;
  border-right: 1rpx solid #ccc;
}

.menu>view:last-child{
  border-right: none;
}

.menu .active{
  color: #ff5777;
}

