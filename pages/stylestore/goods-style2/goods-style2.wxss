.banner {
  background-color: #fff;
  padding: 16rpx 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
}

.top {
  margin-bottom: 18rpx;
}

.title {
  font-size: 30rpx;
  font-weight: bold;
}

.centent {
  font-size: 28rpx;
  color: #999;
  margin-left: 20rpx;
}

.bottom {
  display: flex;
  justify-content: start;
  flex-wrap: nowrap;
  overflow: scroll;
  align-items: flex-start;
}

.bottom::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.item {
  margin: 0 10rpx;
}

.b-top {
  width: 190rpx;
  height: 190rpx;
}

.img {
  width: 100%;
  height: 100%;
  vertical-align: bottom;
}

.shopname {
  color: #333;
  text-align: center;
  font-size: 24rpx;
  margin-top: 20rpx;
  font-weight: bold;
  width: 190rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.shopsale {
  text-align: center;
  color: #bbb;
  font-size: 24rpx;
  margin-top: 8rpx;
}