@import "../../assets/iconfont/iconfont.wxss";
.counter{
  width: 160rpx;
  height: 46rpx;
  display: flex;
  justify-content: start;
  align-items: center;
  border: 1rpx solid #eee;
  border-radius: 6rpx;
}

.sub,.num,.add{
  width: 73rpx;
  height: 46rpx;
  line-height: 46rpx;
  margin-left: 2rpx;
  box-sizing: border-box;
  font-size: 34rpx;
  color: #353535;
  text-align: center;
  border-right: 1rpx solid #ddd;
  box-sizing: border-box;
}

.counter .num{
  color: #666;
  font-size: 34rpx;
  width: 110rpx !important;
}

.sub{
  color: #999;
  border-radius: 6rpx 0 0 6rpx;
}

.add{
  color: #999;
  border-radius: 0 6rpx 6rpx 0;
}

.disable{
  color: #999;
  background-color: rgba(240, 240, 240, 0.782);
}

.iconfont{
  font-size: 24rpx;
}
