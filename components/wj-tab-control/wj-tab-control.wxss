.tab-control {
  display: flex;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff;
  position: sticky;
  position: -webkit-sticky;
  top: 0;
  border-bottom: 1rpx solid #eee;
}

.tab-control .tab-item {
  flex: 1;
  text-align: center;
  box-sizing: border-box;
}

.tab-control .tab-item .tab-item-content {
  padding: 10rpx 14rpx;
  box-sizing: border-box;
  border-bottom: 6rpx solid transparent;
}

.tab-control .active {
  color: #ff5777;
}

.tab-control .active .tab-item-content {
  border-color: #ff5777;
}