.detail-menu {
  width: 100%;
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
}

.menu-left {
  width: 50%;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}

.menu-left .item {
  width: 33.3%;
  text-align: center;
  font-size: 28rpx;
  border-right: 1rpx solid #eee;
}

.menu-left .item:nth-child(3) {
  border-right: none;
}

.menu-left .kefu {
  color: #ff5777;
}

.menu-right {
  width: 50%;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}

.menu-right .add {
  width: 50%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #ff5777;
  text-align: center;
  background-color: #ffe6e8;
}

.menu-right .buy {
  width: 50%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  background: linear-gradient(90deg, #ff5777, #ff468f);
}

.icon-starred{
  color: #ff5777;
}
