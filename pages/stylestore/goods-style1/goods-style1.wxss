.banner {
  display: flex;
  justify-content: start;
  flex-wrap: nowrap;
  overflow: scroll;
  align-items: center;
  padding: 30rpx 10rpx;
  padding-bottom: 10rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 0 0 0 20rpx;
}

.banner::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.banner .item{
  padding: 0 10rpx;
}

.top{
  width: 190rpx;
  height: 190rpx;
  position: relative;
}

.top .img {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 14rpx;
}

.sale{
  font-size: 24rpx;
  position: absolute;
  bottom: -16rpx;
  left: 24rpx;
  padding: 6rpx 20rpx;
  box-sizing: border-box;
  color: rgb(255, 255, 255);
  background: rgb(197, 174, 127);
  border-radius: 20rpx;
}

.bottom{
  margin-top: 24rpx;
}

.new-price{
  text-align: center;
  font-size: 26rpx;
  font-weight: bold;
}

.price{
  text-align: center;
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

